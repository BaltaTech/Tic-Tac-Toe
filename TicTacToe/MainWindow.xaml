<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gato / Tic-Tac-Toe MVVM" Height="550" Width="400"
        MinHeight="450" MinWidth="350"
        Background="#F5F5F5">

    <Window.Resources>
        <Style TargetType="Button" x:Key="GameBoardButtonStyle">
            <Setter Property="FontSize" Value="56"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="Content" Value="X">
                    <Setter Property="Foreground" Value="#E53935"/>
                </Trigger>
                <Trigger Property="Content" Value="O">
                    <Setter Property="Foreground" Value="#1E88E5"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FAFAFA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="ResetButtonStyle">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Texto de estado -->
        <Border Grid.Row="0" Background="#333333" Padding="15" Margin="0,0,0,10">
            <TextBlock Text="{Binding TextoEstado}"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Tablero de 3x3 -->
        <Grid Grid.Row="1" Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Fila 0 -->
            <Button Grid.Row="0" Grid.Column="0"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[0]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="0,0"
                    IsEnabled="{Binding JuegoActivo}"/>
            <Button Grid.Row="0" Grid.Column="1"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[1]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="0,1"
                    IsEnabled="{Binding JuegoActivo}"/>
            <Button Grid.Row="0" Grid.Column="2"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[2]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="0,2"
                    IsEnabled="{Binding JuegoActivo}"/>

            <!-- Fila 1 -->
            <Button Grid.Row="1" Grid.Column="0"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[3]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="1,0"
                    IsEnabled="{Binding JuegoActivo}"/>
            <Button Grid.Row="1" Grid.Column="1"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[4]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="1,1"
                    IsEnabled="{Binding JuegoActivo}"/>
            <Button Grid.Row="1" Grid.Column="2"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[5]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="1,2"
                    IsEnabled="{Binding JuegoActivo}"/>

            <!-- Fila 2 -->
            <Button Grid.Row="2" Grid.Column="0"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[6]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="2,0"
                    IsEnabled="{Binding JuegoActivo}"/>
            <Button Grid.Row="2" Grid.Column="1"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[7]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="2,1"
                    IsEnabled="{Binding JuegoActivo}"/>
            <Button Grid.Row="2" Grid.Column="2"
                    Style="{StaticResource GameBoardButtonStyle}"
                    Content="{Binding Celdas[8]}"
                    Command="{Binding HacerMovimientoCommand}"
                    CommandParameter="2,2"
                    IsEnabled="{Binding JuegoActivo}"/>
        </Grid>

        <!-- Botón de reinicio -->
        <Button Grid.Row="2"
                Content="REINICIAR JUEGO"
                Style="{StaticResource ResetButtonStyle}"
                Command="{Binding ReiniciarJuegoCommand}"
                Margin="20"
                HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
